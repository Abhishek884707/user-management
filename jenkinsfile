pipeline {
  agent any
  
   tools {nodejs "node"}
    
  stages {
    stage("Clone code from GitHub") {
            steps {
                script {
                    checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'GITHUB_CREDENTIALS', url: 'https://github.com/Abhishek884707/user-management.git']])
                }
            }
        }
     
    stage('Node JS Build') {
      steps {
        sh 'npm install'
      }
    }
  
     stage('Build Node JS Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'DOCKER_CREDENTIALS', toolName: 'docker') {
                      sh 'docker build -t range4056/user-management-app-1.0.0 .'
                    }
                }
            }
        }


        stage('Deploy Docker Image to DockerHub') {
            steps {
                script {
                 withDockerRegistry(credentialsId: 'DOCKER_CREDENTIALS', toolName: 'docker') {
                    sh 'docker login -u range4056 -p ${range4056docker}'
            }
            sh 'docker push range4056/user-management-app-1.0'
        }
            }   
        }
         

  }
}